<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailVoteActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detail Vote"
                android:textSize="20dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ti_nama_vote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Vote" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ti_detail_vote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Detail Vote" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/button14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simpan" />


            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daftar Kandidat"
                android:textSize="20dp"
                />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/b_tambah_kandidat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambah Kandidat" />
            <Button
                android:id="@+id/b_hapus_kendidat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hapus Vote" />
            <Button
                android:id="@+id/b_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kembali" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>